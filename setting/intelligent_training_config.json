{
  "auto_intervention_enabled": true,
  "analysis_interval": 10,
  "max_interventions_per_session": 3,
  "parameter_tuning_strategy": "conservative",
  "intervention_thresholds": {
    "overfitting_risk": 0.8,
    "underfitting_risk": 0.7,
    "stagnation_epochs": 5,
    "divergence_threshold": 2.0,
    "min_training_epochs": 3
  },
  "llm_analysis": {
    "enabled": true,
    "analysis_frequency": "epoch_based",
    "min_data_points": 5,
    "confidence_threshold": 0.7
  },
  "intervention_strategies": {
    "conservative": {
      "learning_rate_adjustment": 0.5,
      "batch_size_adjustment": 0.8,
      "dropout_increase": 0.1,
      "weight_decay_increase": 1.5
    },
    "balanced": {
      "learning_rate_adjustment": 0.7,
      "batch_size_adjustment": 0.9,
      "dropout_increase": 0.15,
      "weight_decay_increase": 2.0
    },
    "aggressive": {
      "learning_rate_adjustment": 0.3,
      "batch_size_adjustment": 0.6,
      "dropout_increase": 0.2,
      "weight_decay_increase": 2.5
    }
  },
  "training_restart": {
    "auto_restart": true,
    "max_restart_attempts": 3,
    "restart_delay": 5,
    "preserve_best_checkpoint": true
  },
  "monitoring": {
    "check_interval": 5,
    "metrics_buffer_size": 100,
    "trend_analysis_window": 10,
    "alert_on_intervention": true
  },
  "reporting": {
    "auto_generate_reports": true,
    "report_format": "json",
    "include_visualizations": true,
    "save_intervention_details": true
  }
} 